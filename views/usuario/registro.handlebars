{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
{{/each}}

<h3 class="mb-4">Crie uma conta na Blog-TI</h3>
<form action="/usuario/registro" method="post">
    <div class="card">
        <div class="card-body">
            <label for="nome">Nome:</label>
            <input type="text" name="txtNome" id="nome" placeholder="Nome" class="form-control mb-3" required>
            <label for="email">Email:</label>
            <input type="email" name="txtEmail" id="email" placeholder="Email" class="form-control mb-3" required>
            <label for="senha">Senha:</label>
            <input type="password" name="txtSenha" id="senha" placeholder="Senha" class="form-control mb-3" required>
            <label for="senha2">Repita a sua senha:</label>
            <input type="password" name="txtSenha2" id="senha2" placeholder="Repita a sua senha" class="form-control mb-3" required>
            <button type="submit" class="btn btn-success">Criar conta</button>
        </div>
    </div>
</form>